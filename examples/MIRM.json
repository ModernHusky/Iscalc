{
    "content": [
        {
            "level": 1,
            "name": "Basic Formulas",
            "type": "header"
        },
        {
            "func_name" : "nth",
            "params_name" : ["_w", "_i", "_j"],
            "func_type" : "$fun($tensor($real, _n, _m), $int, $int, $real)",
            "fixes": [["_n", "$int"], ["_m", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "hat",
            "params_name": ["_w"],
            "func_type": "$fun($tensor($real, 3, 1), $tensor($real, 3, 3))",
            "type": "func_type"
        },
        {
            "func_name": "hat",
            "params_name": ["_w"],
            "func_type": "$fun($tensor($real, 6, 1), $tensor($real, 4, 4))",
            "type": "func_type"
        },
        {
            "func_name": "zero_matrix",
            "params_name": ["_n", "_m"],
            "func_type": "$fun($int, $int, $tensor($int, _n, _m))",
            "fixes": [["_n", "$int"], ["_m", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "inv",
            "params_name": ["_A"],
            "func_type": "$fun($tensor($real, _n, _n), $tensor($real, _n, _n))",
            "fixes": [["_n", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "unit_matrix",
            "params_name": ["_n"],
            "func_type": "$fun($int, $tensor($int, _n, _n))",
            "fixes": [["_n", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "T",
            "params_name": ["_A"],
            "func_type": "$fun($tensor($real, _n, _m), $tensor($int, _m, _n))",
            "fixes": [["_n", "$int"], ["_m", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "ccon",
            "params_name": ["_A", "_B"],
            "func_type": "$fun($tensor($real, _r, _c1), $tensor($real, _r, _c2), $tensor($real, _r, _c2))",
            "fixes": [["_r", "$int"], ["_c1", "$int"], ["_c2", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "rcon",
            "params_name": ["_A", "_B"],
            "func_type": "$fun($tensor($real, _r1, _c), $tensor($real, _r2, _c), $tensor($real, _r1+_r2, _c))",
            "fixes": [["_c", "$int"], ["_r1", "$int"], ["_r2", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "norm",
            "params_name": ["_w"],
            "func_type": "$fun($tensor($real, _n, 1), $real)",
            "fixes": [["_n", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "exp",
            "params_name": ["_A"],
            "func_type": "$fun($tensor($real, _n, _n), $tensor($real, _n, _n))",
            "fixes": [["_n", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "nthc",
            "params_name": ["_A", "_i"],
            "func_type": "$fun($tensor($real, _n, _m), $int, $tensor($real, _n, 1))",
            "fixes": [["_n", "$int"],["_m", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "nthr",
            "params_name": ["_A", "_i"],
            "func_type": "$fun($tensor($real, _n, _m), $int, $tensor($real, 1, _m))",
            "fixes": [["_n", "$int"],["_m", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "choose_col",
            "params_name": ["_A", "_i", "_j"],
            "func_type": "$fun($tensor($real, _n, _m), $int, $int, $tensor($real, _n, _j - _i + 1))",
            "fixes": [["_n", "$int"],["_m", "$int"], ["_i", "$int"], ["_j", "$int"]],
            "type": "func_type"
        },
        {
            "func_name": "choose_row",
            "params_name": ["_A", "_i", "_j"],
            "func_type": "$fun($tensor($real, _n, _m), $int, $int, $tensor($real, _j - _i + 1, _m))",
            "fixes": [["_n", "$int"],["_m", "$int"], ["_i", "$int"], ["_j", "$int"]],
            "type": "func_type"
        },
        {
            "attributes": [
                "bidirectional"
            ],
            "category": "matrix-arith",
            "fixes":[
                ["m", "$int"],
                ["A", "$tensor($real, m, m)"]
            ],
            "expr": "exp(A) = SUM(n, 0, oo, A ^ n / factorial(n))",
            "type": "axiom"
        },
        {
            "level": 2,
            "name": "Example01",
            "type": "header"
        },
        {
            "expr": "(inv(P)*A*P)^n = inv(P)*A^n*P",
            "path": "matrix_example01",
            "type": "problem",
            "fixes": [
                ["n", "$int"],
                ["m", "$int"],
                ["P", "$tensor($real, m, m)"],
                ["A", "$tensor($real, m, m)"]
            ],
            "conds": ["invertible(P)","n>=0", "m>=0"]
        },
        {
            "level": 2,
            "name": "Example02",
            "type": "header"
        },
        {
            "expr": "hat(w)^2 =  w * T(w) - norm(w)^2 * unit_matrix(3)",
            "path": "matrix_example02",
            "type": "problem",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"]
            ]
        },
        {
            "expr": "w*T(w)*hat(w) = zero_matrix(3,3)",
            "path": "matrix_example02",
            "type": "problem",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"]
            ],
            "conds": ["type(w,0,3)"]
        },
        {
            "expr": "hat(w)^(2*n+1) = (-1)^n * hat(w)",
            "path": "matrix_example02",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"],
                ["n", "$int"]
            ],
            "conds": ["n>=0", "norm(w) = 1"],
            "type": "problem"
        },
        {
            "expr": "hat(w) ^ (2 * (n + 1)) = (-1) ^ n * hat(w) ^ 2",
            "conds": ["n>=0", "norm(w) = 1"],
            "fixes": [
                ["w", "$tensor($real, 3, 1)"],
                ["n", "$int"]
            ],
            "path": "matrix_example02",
            "type": "problem"
        },
        {
            "level": 2,
            "name": "Rodrigues",
            "type": "header"
        },
        {
            "expr": "1 - cos(a) = SUM(n, 0, oo, (-1) ^ n * a ^ (2 * (n + 1)) / factorial(2 * (n + 1)))",
            "path": "matrix_example06",
            "type": "problem"
        },
        {
            "expr": "exp(t * hat(w)) = unit_matrix(3) + sin(t) * hat(w) + (1 - cos(t)) * (hat(w)) ^ 2",
            "path": "matrix_rodrigues",
            "type": "problem",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"],
                ["t", "$real"]
            ],
            "conds": ["norm(w) = 1"]
        },
        {
            "level": 2,
            "name": "Twist matrix exp inv",
            "type": "header"
        },
        {
            "expr": "hm(R, p) = rcon(ccon(R,p), ccon(zero_matrix(1,3),unit_matrix(1)))",
            "path": "twist_matrix_exp_inv",
            "type": "definition",
            "fixes": [
                ["R", "$tensor($real, 3, 3)"],
                ["p", "$tensor($real, 3, 1)"],
                ["hm", {
                    "params_name": ["R", "p"],
                    "func_type": "$fun($tensor($real, 3,3), $tensor($real, 3,1), $tensor($real, 4, 4))"
                }]
            ]
        },
        {
            "expr": "hmf(t, w, v) = hm(unit_matrix(3), t*v)",
            "fixes": [
                ["t", "$real"],
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"],
                ["hmf", {
                    "params_name": ["t", "w", "v"],
                    "func_type": "$fun($real, $tensor($real, 3, 1), $tensor($real, 3, 1), $tensor($real, 4, 4))"
                }]
            ],
            "path": "twist_matrix_exp_inv",
            "type": "definition",
            "conds": ["norm(w) = 0"]
        },
        {
            "expr": "hmf(t, w, v) = hm(exp(t*hat(w)), (unit_matrix(3)-exp(t*hat(w)))*(hat(w)*v)+(w*T(w)*v*t))",
            "path": "twist_matrix_exp_inv",
            "type": "definition",
            "fixes": [
                ["t", "$real"],
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"],
                ["hmf", {
                    "params_name": ["t", "w", "v"],
                    "func_type": "$fun($real, $tensor($real, 3, 1), $tensor($real, 3, 1), $tensor($real, 4, 4))"
                }]
            ],
            "conds": ["norm(w) = 1"],
            "func_type": "$fun($real, $tensor($real, 3, 1), $tensor($real, 3, 1), $tensor($real, 4, 4))"
        },
        {
            "expr": "hat(w) ^ n * w = zero_matrix(3,1)",
            "path": "twist_matrix_exp_inv",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"],
                ["n", "$int"]
            ],
            "type": "problem",
            "conds": ["type(n, 1)","type(w, 0 ,3)", "n>=1"]
        },
        {
            "expr": "hat(w) * w = zero_matrix(3,1)",
            "path": "twist_matrix_exp_inv",
            "type": "problem",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"]
            ],
            "conds": ["type(w, 0 ,3)"]
        },
        {
            "expr": "hmf(t, w, v) * hmf(-t, w, v) = unit_matrix(4)",
            "path": "twist_matrix_exp_inv",
            "type": "problem",
            "fixes": [
                ["t", "$real"],
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"]
            ],
            "conds": ["norm(w) = 1"]
        },
        {
            "expr": "hmf(-t, w, v) * hmf(t, w, v) = unit_matrix(4)",
            "path": "twist_matrix_exp_inv",
            "type": "problem",
            "fixes": [
                ["t", "$real"],
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"]
            ]
        },
        {
            "level": 2,
            "name": "Twist fmatrix exp diff",
            "type": "header"
        },
        {
            "expr": "twist(w, v) = hat(rcon(w, v))",
            "path": "twist_derive_hmf",
            "type": "definition",
            "fixes": [
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"],
                ["twist", {
                    "params_name": ["w", "v"],
                    "func_type": "$fun($tensor($real, 3, 1), $tensor($real, 3, 1), $tensor($real, 6, 1))"}
                ]
            ]
        },
        {
            "expr": "(D t. hmf(t, w, v)) = twist(w, v) * hmf(t, w, v)",
            "path": "twist_derive_hmf",
            "type": "problem",
            "fixes": [
                ["t", "$real"],
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"]
            ],
            "conds": ["norm(w) = 0"]
        },
        {
            "expr": "(D t. hmf(t, w, v)) = twist(w, v) * hmf(t, w, v)",
            "path": "twist_derive_hmf",
            "type": "problem",
            "fixes": [
                ["t", "$real"],
                ["w", "$tensor($real, 3, 1)"],
                ["v", "$tensor($real, 3, 1)"]
            ],
            "conds": ["norm(w) = 1"]
        },
        {
            "level": 2,
            "name": "Matrix POE inv",
            "type": "header"
        },
        {
            "expr": "gst(t, n, w, v, ic) = MUL(i, 0, n-1, hmf(nth(t, i, 0), nthc(w, i), nthc(v, i))) * ic",
            "path": "matrix_poe_inv",
            "type": "definition",
            "fixes": [
                ["i", "$int"],
                ["n", "$int"],
                ["t", "$tensor($real, n, 1)"],
                ["w", "$tensor($real, 3, n)"],
                ["v", "$tensor($real, 3, n)"],
                ["ic", "$tensor($real, 4, 4)"],
                ["gst", {
                    "params_name": ["t", "n", "w", "v", "ic"],
                    "func_type": "$fun($tensor($real, n, 1), $int, $tensor($real, 3, n), $tensor($real, 3, n), $tensor($real, 4, 4), $tensor($real, 4, 4))"
                }]
            ]
        },
        {
            "expr": "(inv(ic) * MUL(i, 0, n-1, hmf(-nth(t, n-i-1, 0), nthc(w, n-i-1), nthc(v, n-i-1))))*gst(t, n, w, v, ic) = unit_matrix(4)",
            "path": "matrix_poe_inv",
            "type": "problem",
            "fixes": [
                ["i", "$int"],
                ["n", "$int"],
                ["t", "$tensor($real, n, 1)"],
                ["w", "$tensor($real, 3, n)"],
                ["v", "$tensor($real, 3, n)"],
                ["ic", "$tensor($real, 4, 4)"]
            ]
        }
    ],
    "imports": [
        "matrix"
    ],
    "name": "mirm"
}